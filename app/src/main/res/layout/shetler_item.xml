<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView android:orientation="vertical"
    android:padding="8dp"
    android:layout_margin="16dp"
    app:cardCornerRadius="8dp"
    android:elevation="8dp"
    android:background="@drawable/transparent_rectangle"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:orientation="vertical"
        android:padding="8dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    <TextView
        android:padding="4dp"
        android:id="@+id/addressTv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Address 13 13 13"/>


    <TextView
        android:padding="4dp"
        android:id="@+id/dateTv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Visited at 02/02/2024 16:38"/>


    <Button
        android:id="@+id/addReportBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end"
        android:layout_margin="8dp"
        android:backgroundTint="@color/black"
        android:text="Report has stairs" />

    </LinearLayout>
</androidx.cardview.widget.CardView>